/* pages/create/activity_create.wxss */

/*
创建活动页面 页面样式
  */
  
.page_activity_create {
  background: #fff;
  width: 100%;
  margin-bottom: 300rpx;
  display: flex;
}

/*
创建活动页面 输入部分样式
  */

.enter_part_activity_create {
  display: flex;
  flex-direction: column;
  width: 90%;
  font-size: 11pt;
  align-items: center;
}

.head_enter_part_top {
  width: 100%;
  padding: 8px 0 0px 0;
  display: flex;
  flex-direction: row;
}

.head_enter_part {
  width: 100%;
  border-bottom: 1rpx solid #999;
}

.input_box_head_enter_part {
  margin-right: 10rpx;
  border: 1rpx solid #999;
  display: flex;
  flex-grow: 1;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  color: #9999a6;
  width: 100%;  
  align-items: center;
}

.detail_enter_part {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  border-bottom: 1rpx solid #999;
  flex-direction: column;
}

.info_detail_enter_part {
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
  border: 1rpx solid #999;
  border-radius: 10rpx;
}

.textarea_box_detail_enter_part {
  margin: 0 10rpx;
  display: inline-block;
  flex-grow: 1;
  padding: 10rpx 20rpx;
  color: #9999a6;
  width: 100%;
}

.picture_detail_enter_part {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.add_picture_buttone_detail_enter_part {
  margin: 10rpx 20rpx;
  width: 100rpx;
  height: 100rpx;
}

/*
创建活动页面 附加信息部分样式
  */

.extra_info_part_activity_create {
  display: flex;
  flex-direction: column;
  width: 90%;
  font-size: 11pt;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #999;
}

.item_extra_info {
  height: 90rpx;
  display: flex;
  flex-direction: row;
  width: 90%;
  justify-content: space-between;
  align-items: center;
  font-size: 13pt;
  color: #333;
}

/*
创建活动页面 日立类别部分样式
  */

.calendar_type_activity_create {
  display: flex;
  flex-direction: column;
  width: 90%;
  font-size: 11pt;
  align-items: center;
  padding: 20rpx 0;
}

.item_calendar_type {
  height: 90rpx;
  display: flex;
  flex-direction: row;
  width: 90%;
  justify-content: space-between;
  align-items: center;
  font-size: 13pt;
  color: #333;
}

.submit_button_activity_create {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  left: 0;
  line-height: 2.6666;
  color: white;
  background-color: #09bb07;
  z-index: 10000;
}

.submit_button_activity_create_ipx {
  position: fixed;
  bottom: 68rpx;
  width: 750rpx;
  left: 0;
  line-height: 2.6666;
  color: white;
  background-color: #09bb07;
  z-index: 10000;
}

/*
创建活动页面 附加信息部分样式
  */

.additional_info_activity_create {
  display: flex;
  flex-direction: column;
  width: 90%;
  font-size: 11pt;
  align-items: center;
}

.item_additional_info {
  height: 90rpx;
  display: flex;
  flex-direction: row;
  width: 90%;
  justify-content: space-between;
  align-items: center;
  font-size: 13pt;
  color: #333;
}

/*
创建活动页面 提示信息样式
  */

.tip_mycalendar {
  display: flex;
}

.add_preview_image {
  background-color: orange;
  font-weight: bold;
  color: white;
}

.preivew_view > image {
  height: 200px;
  margin-top:5px;
  border-radius: 5px;
}

.titel_intro {
  margin: 4px 0 4px 0;
  font-size: 11px;
  color: grey;
}