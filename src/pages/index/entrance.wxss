/* pages/index/entrance.wxss */
.section {
  padding: 8px;
  background-color: white;
}

.week_day {
  padding-top: 2px;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  align-items: center;
}


.week_view {
  width: 750rpx;
  flex-basis: 750rpx;
  background-color: white;
  display: flex;
  flex-grow: 1;
}

.week_view_left {

  transform: translateX(-750rpx);
  transition-duration: 1s;
}

.week_view_right {

  transform: translateX(750rpx);
  transition-duration: 1s;
}


.choosed_date {
  background-color: black !important;
  color: white !important;
}

.week_group {
  padding-top: 1px;
  display: inline-flex;
}

.button_view{
  padding-right: 15px;
}

.today {
  background-color: #abc88b; 
  color: white;
}

.week_view {
  position: relative !important;
  left: -750rpx;
}

/*

from activity/list

*/

.activity_view {
  display: flex;
  flex-grow: 1;
  height: 50px;
  padding: 8px 15px;
  background-color: white;
  margin-bottom: 1px;
  align-items: center;
}

.choosed_date_view {
  font-size: 16px;
  font-weight: bold;
  color: black;
}

.left_view, .center_view, .right_view{
  display: flex;
  flex-direction:column;
}

.left_view {
  flex-basis: 50px;
}

.center_view {
  min-width: 0;
  flex-grow: 4; 
  padding: 0px 0px 0px 8px;
}

.right_view {
  flex-basis: 120px;
}

.right_view > view {
  display: flex;
  width: 120px;
  justify-content: space-around;
  background-color: white;
}

.text-overflow {
  word-break:break-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}


.avatar {
  width: 50px; 
  height: 50px;
  background-size:cover;
  background-repeat: no-repeat;
  background-position:center center;  
}

.right_view {
  float: right;
}

.filter_view {
  display: flex;
  height: 45px;
}

.filter_view > view {
  background-color: white;
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  margin-top: 1px;
  margin-bottom: 2px;
}

.all_type, .type_list {
  margin-right: 1px;
}

.filter_intro {
  display: flex;
  margin-right: 4px;
  align-items: center;
}

.filter_view .icon {
  display: flex;
  align-items: center;
}

.title_content {
  color: grey;
}

.choosed_filter {
  color: white;
  background-color: #09bb07 !important;
}

.add_activity_home_index {
  position: fixed;
  z-index: 1000;
  border-radius: 310rpx;
  bottom: 30rpx;
  right: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center; 
  align-items: center;
  text-align: center;
  width: 110rpx;
  height: 110rpx;
}

.time_picker_home_index {
  margin-left: 20rpx;
}

.month_time_picker {
  font-size: 15pt;
  font-weight: 500;
  margin: 0 5rpx;
}

.year_time_piker {
  font-size: 13pt;
  margin: 0 5rpx;
  font-weight: 300;
}


.font12 {
  font-size: 12px;
}

/*
首页 头部样式。
*/
.head_home_index {
  background-color: #f2f2f2;
  height: 100rpx;
  width: 100%;
  justify-content: space-around;
}

/*
首页 搜索框样式。
*/
.searchbox_home_index {
  width: 80%;
  min-height: 68rpx; /*为了和站内信对齐*/
  border: solid 1px #d7d7d7;
  border-radius: 10rpx;
  color: #99a6c4;
  display: flex;
  flex-direction: row;
  font-size: 11pt;
  justify-content: center;
  text-align: center;
  align-items: center;
  background: #fff;
}

.picker_view {
  display: flex;
  background-color: white;
  justify-content:space-between;
}

.week_group_view{
  background-color: #eee;
  position: absolute;
  width: 100%;
  left: 0;
  overflow: hidden;
  border-bottom: 1px solid #d7d7d7;
}

.activity_list {
  padding-top: 190px;
}

.header_body {
  width: 100%;
  position: fixed;
  top: 0;
}

.week_foot {
  height: 25px;
  width: 45px;
  font-size: 11px;
  color: white;
  background-color:#09bb07;
  border-radius: 25px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 4px;
}

.empty_foot {
  height: 25px;
  width: 45px;
  font-size: 11px;
  color: white;
  background-color:white !important;
  border-radius: 25px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 4px;
}

.week_body {
  height: 30px;
  width: 30px;
  border-radius: 25px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 4px;
}