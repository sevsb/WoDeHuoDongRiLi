/* pages/index/search/index.wxss */

/*
搜索页面 搜索框
  */

.search_box_search_index {
  margin: 30rpx 0 0 0;
  height: 68rpx;
  width: 90%;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  color: #99a6c4;
  display: flex;
  flex-direction: row;
  font-size: 11pt;
  align-items: center;
  background: #fff;
}

.search_icon_search_box {
  margin: 0 0 0 20rpx;
  display: flex;
  align-items: center;
}

.input_search_box {
  margin: 0 20rpx;
  display: flex;
  flex-grow: 1;
}

.cancel_icon_search_box {
  margin: 0 20rpx 0 0;
}

/*
搜索页面 便捷搜索部分
  */

.convenient_search_search_index {
  display: flex;
  flex-direction: column;
  width: 90%;
  color: #999;
  font-size: 11pt;
}

.item_convenient_search {
  margin: 20rpx 0 0 0;
  border-bottom: 1rpx solid #c9c9c9;
}

.title_convenient_search {
  color: #333;
  font-size: 13pt;
}

.info_convenient_search {
  margin: 3rpx 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 0 10rpx 0;
}

.item_info_convenient_search {
  margin: 10rpx 0;
  border: 1rpx solid #999;
  background: #fff;
  display: flex;
  flex-direction: row;
  padding: 0 30rpx;
  border-radius: 10rpx;
  line-height: 1.6;
}
