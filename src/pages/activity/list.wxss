/* pages/activity/list.wxss */

.activity_view {
  width: 100%;
  padding: 8px;
  background-color: white;
  margin-bottom: 2px;
  align-items: center;
}

.left_view, .center_view, .right_view{
  display: flex;
  flex-direction:column;
}

.left_view {
  flex-basis: 60px;
}

.center_view {
  min-width: 0;
  flex-grow: 4; 
  padding: 0px 0px 0px 8px;
}

.right_view {
  flex-basis: 120px;
}

.right_view > view {
  display: flex;
  width: 120px;
  justify-content: space-around;
}

.text-overflow {
  word-break:break-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}

.activity_view {
  display: flex;
  height: 60px;
}
.avatar {
  width: 60px; 
  height: 60px;
}

.right_view {
  float: right;
}