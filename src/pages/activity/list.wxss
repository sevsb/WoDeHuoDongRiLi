/* pages/activity/list.wxss */

.activity_view {
  display: flex;
  flex-grow: 1;
  height: 50px;
  padding: 8px 15px;
  background-color: white;
  margin-bottom: 1px;
  align-items: center;
}

.left_view, .center_view, .right_view{
  display: flex;
  flex-direction:column;
}

.left_view {
  flex-basis: 50px;
}

.center_view {
  min-width: 0;
  flex-grow: 4; 
  padding: 0px 0px 0px 8px;
}

.right_view {
  flex-basis: 120px;
}

.right_view > view {
  display: flex;
  width: 120px;
  justify-content: space-around;
  background-color: white;
}

.text-overflow {
  word-break:break-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}


.avatar {
  width: 50px; 
  height: 50px;
}

.right_view {
  float: right;
}

.filter_view {
  display: flex;
  height: 45px;
}

.search_view, .filter_view {
  background-color: #eee;
}

.filter_view > view {
  background-color: white;
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  margin-top: 1px;
  margin-bottom: 2px;
}

.all_type, .type_list {
  margin-right: 1px;
}

.filter_intro {
  display: flex;
  margin-right: 4px;
  align-items: center;
}

.filter_view .icon {
  display: flex;
  align-items: center;
}

.title_content {
  color: grey;
}

.choosed_filter {
  color: white;
  background-color: #09bb07 !important;
}

.header_view {
  width: 100%;
  position: fixed;
  left: 0;
}

.activity_list {
  padding-top: 89px;
}