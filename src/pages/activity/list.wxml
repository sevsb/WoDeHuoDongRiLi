<!--pages/activity/list.wxml-->
<view class='activity_list'>
  <view class='activity_item' bindtap='show_detail' data-id='{{item.id}}' wx:for='{{activity_list}}'>
    <view class='avatar_view'>
      <image  class='avatar' src='{{item.avatar_detail.url}}'></image>
    </view>
    <view class='detail'>
      <view class='row'>
        <view class='title'>{{item.title}}</view>
        <view class='time'>{{item.time_detail}}</view>
      </view>
      <view class='row'>
        <view class='content'>{{item.content}}</view>
        <view class='type'>{{item.type_detail.title}}</view>
      </view>
    </view>
  </view>
</view>

<view class=''></view>