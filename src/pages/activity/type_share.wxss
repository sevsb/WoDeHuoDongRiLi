/* pages/management/calendar_type_management.wxss */

.head_calendar_type_management {
  height: 90rpx;
  width: 100%;
  font-size: 11pt;
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  margin: 20rpx 0 ;
}

.box_head {
  width: 90%;
  height: 100%;
  align-items: center;
  color: #666;
  background: #fdfdfd;
  display: flex;
  border-radius: 10rpx;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 30rpx;
}

/*
日历类型管理页面 列表样式
  */

.list_calendar_type_management {
  width: 100%;
  margin: 10rpx 0 0 0 ;
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  font-size: 11pt;
}

.list_calendar_type_management_view {
  padding-top: 188px;
}

.title_box_list {
  width: 100%;
  height: 90rpx;
  background-color: #fdfdfd;
  flex-direction: row;
  padding: 0px 15px 0px 15px;
  display: flex;
  align-items: center;
  justify-content:space-between;
}

.share_icon {
  height: 30px;
  width: 30px;
  background-image: url('http://www.xiaoningmengkeji.com/xiaoyu/upload/system/share.png');
  background-repeat: no-repeat;
  background-position-x: center;
  background-position-y: center;
  background-size: 30px 30px;
  border: 1px solid;
  color: white;
}

.header_intro {
  padding: 8px;
  background-color: white;
  position: fixed;
  left: 0;
  width: 100%;
  z-index: 9999;
}

.grey {
  color: grey;
}

.share_intro_second {
  margin: 8px 0 8px 0;
}
